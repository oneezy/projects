{
  "name": "@apps/projects",
  "description": "",
  "author": "Justin O'Neill",
  "version": "0.0.0",
  "inherits": [
    "@packages/dependencies/package.svelte.json",
    "@packages/dependencies/package.shared.json"
  ],
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "preview": "vite preview --port 5000",
    "package": "svelte-kit package",
    "check": "svelte-kit sync && svelte-check",
    "check:watch": "svelte-kit sync && svelte-check --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "preinstall": "pnpm exec inherit -u"
  },
  "dependencies": {
		"@oneezy/ui": "workspace:*",
    "@packages/config": "workspace:*",
    "@packages/metadata": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "^1.0.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.16.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.18",
    "postcss-load-config": "^4.0.1",
    "svelte": "^3.55.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^5.0.0",
    "tailwindcss": "^3.2.4",
    "@tailwindcss/typography": "^0.5.8",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "vite": "^4.0.3"
  },
  "type": "module"
